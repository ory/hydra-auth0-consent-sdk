{
  "name": "hydra-node-consent-sdk",
  "version": "0.0.0",
  "scripts": {
    "build": "babel src --out-dir ./lib --copy-files --ignore .test.js",
    "build:watch": "babel src --watch --out-dir ./lib --copy-files --ignore .test.js",
    "start": "node --harmony ./example/bin/www.js",
    "dev": "nodemon --exec babel-node ./src/bin/www.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "flow": "flow check",
    "format": "prettier --single-quote --parser flow --no-semi --write \"src/**/*.js\"",
    "flow:generate": "flow-typed install"
  },
  "dependencies": {
    "auth0": "~2.8.0",
    "ory-hydra-sdk": "~0.10.0-alpha.18",
    "passport": "~0.3.0",
    "passport-auth0": "~0.6.0",
    "passport-local": "~1.0.0",
    "promise-retry": "^1.1.1",
    "simple-oauth2": "~1.0.0",
    "url-join": "~2.0.2"
  },
  "devDependencies": {
    "babel-cli": "~6.26.0",
    "babel-preset-env": "~1.6.0",
    "babel-preset-flow": "~6.23.0",
    "babel-preset-stage-0": "~6.24.1",
    "flow-bin": "0.58.0",
    "flow-typed": "2.2.3",
    "jest": "~15.1.1",
    "lerna": "^2.0.0",
    "nock": "~8.0.0",
    "nodemon": "~1.11.0",
    "prettier": "^1.7.4"
  },
  "jest": {
    "roots": [
      "./src"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "flow-typed",
      "*.test.js",
      "src/public",
      "build",
      "src/views"
    ]
  }
}
